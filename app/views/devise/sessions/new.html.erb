<h2 class="david_header">Sign in</h2>
<div class="form_blue">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :remember_me, as: :boolean %>

	<div class="form-actions" style="background-color: #C1D4E6; border-radius: 10px;">
		<%= f.submit "Sign in", class: "btn btn-large submit_button	" %>
	</div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>